<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/root"
    tools:context="com.yishengyue.seller.cn.yishengyue.seller.LoginActivity">

    <ImageView
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/artboard"/>

    <RelativeLayout
        android:id="@+id/dialog_relative"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="38dp"
        android:background="@drawable/login_input_bg">

        <ImageView
            android:id="@+id/log_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_logo_small"/>
        <ImageView
            android:id="@+id/activity_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:src="@mipmap/ic_close"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/log_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="登录"
            android:textColor="#000000"
            android:textSize="28sp"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="登录账户"
            android:textColor="#000000"
            android:textSize="11sp"
            />

        <cn.bry.yueke.view.widget.ClearEditText
            android:id="@+id/login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/login_password"
            android:layout_below="@+id/textView4"
            android:background="@drawable/login_edittext_bg"
            android:gravity="center"
            android:hint="请输入你的登录账户"
             android:paddingBottom="8dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="6dp"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="#1A1A1A"
            android:layout_marginEnd="34dp"
            android:textColorHint="#BFC9D4"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="登录密码"
            android:textColor="#000000"
            android:textSize="11sp"
            />

        <cn.bry.yueke.view.widget.ClearEditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_marginEnd="34dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/login_edittext_bg"
            android:gravity="center"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:textColor="#1A1A1A"
            android:textColorHint="#BFC9D4"
            android:textSize="17sp"/>

        <TextView
            android:enabled="false"
            android:layout_marginEnd="34dp"
            android:layout_marginStart="34dp"
            android:layout_below="@id/login_password"
             android:textColor="#FFFFFF"
            android:id="@+id/login_commit"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录"
            android:layout_marginTop="30dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="@drawable/login_button_bg20"
            android:textSize="17sp"
            />


    </RelativeLayout>


</FrameLayout>
