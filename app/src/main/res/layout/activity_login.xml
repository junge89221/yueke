<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/root"
    tools:context="com.yishengyue.seller.LoginActivity">

    <ImageView
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/artboard"/>

    <RelativeLayout
        android:id="@+id/dialog_relative"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="38dp"
        android:background="@drawable/login_input_bg">

        <ImageView
            android:id="@+id/log_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_logo_small"/>
        <ImageView
            android:id="@+id/activity_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:src="@mipmap/ic_close"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/log_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="登录"
            android:textColor="#000000"
            android:textSize="28sp"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="手机号"
            android:textColor="#000000"
            android:textSize="11sp"
            />

        <EditText
            android:maxLength="11"
            android:id="@+id/login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:layout_marginEnd="34dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/login_edittext_bg"
            android:gravity="center"
            android:hint="请输入你的手机号码"
            android:inputType="phone"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="#1A1A1A"
            android:textColorHint="#BFC9D4"
            android:textSize="17sp"/>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="登录密码"
            android:textColor="#000000"
            android:textSize="11sp"
            />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_marginEnd="34dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/login_edittext_bg"
            android:gravity="center"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="#1A1A1A"
            android:textColorHint="#BFC9D4"
            android:textSize="17sp"/>

        <TextView
            android:enabled="false"
            android:layout_marginEnd="34dp"
            android:layout_marginStart="34dp"
            android:layout_below="@id/login_password"
             android:textColor="#FFFFFF"
            android:id="@+id/login_commit"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录"
            android:layout_marginTop="30dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="@drawable/login_button_bg20"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/login_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/login_commit"
            android:layout_below="@id/login_commit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="忘记密码"
            android:textColor="#3A3A3A"
            android:textSize="13sp"
            />


        <TextView
            android:id="@+id/login_fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/login_commit"
            android:layout_below="@id/login_commit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="验证码快捷登录"
            android:textColor="#3B55E6"
            android:textSize="13sp"
            />
    </RelativeLayout>


</FrameLayout>
