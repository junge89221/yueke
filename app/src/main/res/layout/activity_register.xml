<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.yishengyue.seller.LoginActivity">

    <ImageView
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/artboard"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="38dp"
        android:background="@drawable/login_input_bg"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/log_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_logo_small"/>

        <ImageView
            android:id="@+id/activity_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:src="@mipmap/ic_close"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/log_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="注册"
            android:textColor="#000000"
            android:textSize="28sp"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="手机号"
            android:textColor="#000000"
            android:textSize="11sp"
            />

        <EditText
            android:maxLength="11"
            android:id="@+id/login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:layout_marginEnd="34dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/login_edittext_bg"
            android:gravity="center"
            android:hint="请输入你的手机号码"
            android:inputType="phone"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="#1A1A1A"
            android:textColorHint="#BFC9D4"
            android:textSize="17sp"/>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="验证码"
            android:textColor="#000000"
            android:textSize="11sp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/login_password_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_marginEnd="34dp"
             android:layout_marginStart="34dp"
            android:layout_marginTop="6dp">

            <EditText
                android:layout_weight="1"
                android:id="@+id/login_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edittext_bg"
                android:gravity="center"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:textColor="#1A1A1A"
                android:textColorHint="#BFC9D4"
                android:textSize="17sp"/>

            <TextView
                  android:id="@+id/get_code"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_button_bg20"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                 android:layout_marginLeft="16dp"
                android:text="获取"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                />
        </LinearLayout>

        <TextView
            android:enabled="false"
            android:id="@+id/login_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_password_ll"
            android:layout_marginEnd="34dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_button_bg20"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="下一步"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            />



        <TextView
            android:id="@+id/login_fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/login_commit"
            android:layout_below="@id/login_commit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="已有账号，去登录"
            android:textColor="#3A3A3A"
            android:textSize="13sp"
            />
    </RelativeLayout>


</FrameLayout>
