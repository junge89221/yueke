<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.yishengyue.seller.LoginActivity">

    <ImageView
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/artboard"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="38dp"
        android:background="@drawable/login_input_bg"
        android:paddingBottom="38dp">

        <ImageView
            android:id="@+id/activity_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:src="@mipmap/ic_close"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="忘记密码"
            android:textColor="#000000"
            android:textSize="28sp"
            />

        <TextView
            android:id="@+id/hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="手机号"
            android:textColor="#000000"
            android:textSize="11sp"
            />

        <com.yishengyue.seller.view.widget.ClearEditText
            android:id="@+id/login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hint_text"
            android:layout_marginEnd="34dp"
            android:layout_marginStart="34dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/login_edittext_bg"
            android:gravity="center"
            android:hint="请输入你的手机号码"
            android:inputType="phone"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="#1A1A1A"
            android:textColorHint="#BFC9D4"
            android:textSize="17sp"/>


        <TextView
             android:id="@+id/login_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_phone"
            android:layout_marginEnd="34dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_button_bg20"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="获取验证码"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/forget_password_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="1/3"
            android:textColor="#B1B1B1"
            android:textSize="12sp"
            />


    </RelativeLayout>


</FrameLayout>
