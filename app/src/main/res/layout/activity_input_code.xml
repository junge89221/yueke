<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.yishengyue.seller.InputCodeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/activity_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/activity_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="手动输入"
            android:textColor="#030303"
            android:textSize="17sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:src="@mipmap/img_yanzhengma" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="请确保输入的验证码正确"
        android:textColor="#1a1a1a"
        android:textSize="13sp" />


    <com.yishengyue.seller.view.widget.ClearEditText
        android:id="@+id/code_edit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:paddingTop="10dp"
        android:inputType="number"
        android:paddingBottom="10dp"
        android:layout_marginTop="30dp"
        android:background="#f6f6f6"
        android:gravity="center"
        android:hint="在此输入验证码"
        android:textColor="#1a1a1a"
        android:textSize="15sp" />

    <View
        android:layout_width="300dp"
        android:layout_height="0.5dp"
        android:background="#DFE4E6" />
    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        android:layout_height="49dp"
        android:text="确定"
        android:enabled="false"
        android:background="@drawable/normal_button_circular_selector"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/ColorFFFF"/>
</LinearLayout>
