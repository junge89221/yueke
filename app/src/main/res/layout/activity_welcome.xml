<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
      tools:context="com.yishengyue.seller.WelcomeActivity"
    tools:ignore="ContentDescription,MissingConstraints">
 

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
       android:src="@mipmap/ic_logo_big"
      />

    <TextView
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.3dp"
        android:text="一生约商家O2O"
        android:textSize="12sp"
        android:textColor="#000000"
        />

    <TextView
        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"
        android:textColor="#BFC9D4"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="欢迎来到"
        android:textSize="12sp"

       />

    <TextView
        android:layout_below="@id/textView4"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="一生约商家O2O"
        android:textSize="34sp"
        android:textColor="#1A1A1A"
        />

    <TextView
        android:layout_below="@id/textView5"
        android:layout_centerHorizontal="true"
        android:textColor="#1A1A1A"
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="75dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="这是对于商家O2O的描述\n具体文字你可以自行脑补或者找产品大大要，谢谢~~"
        android:textSize="16sp"
        />

    <TextView
        android:layout_marginBottom="73dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="登录"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
         android:background="@drawable/login_button_bg"
        android:textSize="17sp"
        />

    <TextView
        android:layout_marginBottom="24dp"
        android:layout_above="@id/textView8"
         android:layout_centerHorizontal="true"
        android:textColor="#3B55E6"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="注册"
        android:textSize="17sp"

         />


</RelativeLayout>
